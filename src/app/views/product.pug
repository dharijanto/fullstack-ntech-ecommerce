  header
    h1
      | Nusantara Gizmo - Solusi Gadget & Elektronik Anda
    section.information #[a(href=`/category/${product.subCategory.category.id}`) #{product.subCategory.category.name}] > #[a(href=`/subCategory/${product.subCategory.id}`) #{product.subCategory.name}]
    section.product
      section.images
        if (product.productImages.length > 0)
          article.main-image
            img(src=`${getImageURL(product.productImages[0].imageFilename)}`)
          section.thumbnail-images
            each productImage in product.productImages
              article
                img(src=`${getImageURL(productImage.imageFilename)}`)
