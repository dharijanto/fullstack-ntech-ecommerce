mixin renderProducts(products)
  each product in products
    .col-6.col-lg-3
      .product
        figure.product-image
          a(href=`${getProductURL(product)}`)
            img(src=`${getThumbnailImageURL(product.primaryImage.imageFilename)}` alt='Image')
        .product-meta
          h3.product-title
            a(href=`${getProductURL(product)}`)= product.name
          .product-price
            strong
              span= formatPrice(product.price)
            span.product-action
              a(href=`${getProductURL(product)}`) View Product
          a.product-like(href='#!')
    

mixin renderPagination(currentPage, totalPage, url)
  ul.pagination.pagination-lg
    - for (let i = 1; i <= totalPage; i++)
      if (currentPage == i)
        li.page-item.active
          a.page-link(href=url.replace('__pageNumber', i))= i 
            span.sr-only (current)
      else
        li.page-item(aria-current='page')
          a.page-link(href=url.replace('__pageNumber', i))= i
