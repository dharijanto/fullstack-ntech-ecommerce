extend layout/base
include include/product-catalog.pug

block content
  h1 #[a(href=getCategoryURL(subCategory.category)) #{subCategory.category.name}] - #{subCategory.name}
  if inStockProducts.length > 0
    section.product-catalog
      h2 Produk - Ready Stock
      section.tiles
        +renderProducts(inStockProducts)
      +renderPagination(currentInStockProductPage, inStockProductTotalPage, getCategoryURL(category, '__pageNumber', currentPOProductPage, 'in-stock-products'))

  if poProducts.length > 0
    section.product-catalog
      h2 Produk - Pre-Order
      section.tiles
        +renderProducts(poProducts)
      +renderPagination(currentInStockProductPage, inStockProductTotalPage, getCategoryURL(category, '__pageNumber', currentPOProductPage, 'in-stock-products'))